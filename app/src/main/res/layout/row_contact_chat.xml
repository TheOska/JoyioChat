<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView--><!--xmlns:card_view="http://schemas.android.com/apk/res-auto"--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:id="@+id/card_view"--><!--android:layout_width="160dp"--><!--android:layout_height="wrap_content"--><!--card_view:cardUseCompatPadding="true"--><!--card_view:cardCornerRadius="8dp"--><!--android:layout_marginBottom="16dp"--><!--&gt;-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark"
    android:orientation="horizontal">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_contact_profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/fav_people_icon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/chat_contact_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true" />

</LinearLayout>

    <!--</android.support.v7.widget.CardView>-->